<!DOCTYPE html>
<html oncontextmenu="return false" onselectstart="return false">
<head>
    <meta charset="UTF-8">
    <title>게시글 쓰기</title>
    <script language="javascript" src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.3.1.min.js"></script>
    <script>
        function check() {
            //이름 공백 확인
            if($("#name").val() == ""){
                alert("이름을 입력해주세요.");
                $("#name").focus();
                return false;
            }

            //제목 공백 확인
            if($("#title").val() == ""){
                alert("제목을 입력해주세요.");
                $("#title").focus();
                return false;
            }

            //내용 공백 확인
            if($("#contents").val() == ""){
                alert("내용을 입력해주세요.");
                $("#contents").focus();
                return false;
            }
        }
    </script>
</head>
<body>
    <center>
        <form method="post" action="/board/write" onsubmit="return check()">
            <h1>이름</h1>
            <input type="text" name="name" id="name">
            <h1>제목</h1>
            <input type="text" name="title" id="title">
            <h1>내용</h1>
            <textarea name="contents" id="contents" cols="30" rows="10"></textarea>
            <input type="submit">
        </form>
    </center>
</body>
</html>